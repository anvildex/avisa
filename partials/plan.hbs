<div class="subscribe-checkout">
    <div class="subscribe-plan">
        <div class="plan-item">
            <h4 class="name">{{t "Free"}}</h4>
            <div class="price"><sup>&#36;</sup><span>0</span></div>
            <ul class="details">
                <li>{{t "Access to all free private posts"}}</li>
                <li>{{t "Weekly updates with new content"}}</li>
                <li>{{t "Support independent publishing"}}</li>
                <li>{{t "No card required"}}</li>
            </ul>
            {{#if @member}}
            <span class="checkout current">{{t "Your current plan"}}</span>
            {{else}}
            <a class="checkout signup-open" href="javascript:void(0)">{{t "Choose this plan"}}</a>
            {{/if}}
        </div>
        <div class="plan-item">
            <h4 class="name">{{t "Monthly"}}</h4>
            <div class="price"><sup>&#36;</sup><span>{{@price.monthly}}</span></div>
            <ul class="details">
                <li>{{t "Full access to all private posts"}}</li>
                <li>{{t "Regular updates with new content"}}</li>
                <li>{{t "Support independent publishing"}}</li>
                <li>{{t "Simple, secure card payment"}}</li>
            </ul>
            <a class="checkout" href="javascript:void(0)" data-members-plan="Monthly">{{t "Choose this plan"}}</a>
        </div>
        <div class="plan-item">
            <h4 class="name">{{t "Yearly"}}</h4>
            <div class="price"><sup>&#36;</sup><span>{{@price.yearly}}</span></div>
            <ul class="details">
                <li>{{t "Full access to all private posts"}}</li>
                <li>{{t "Regular updates with new content"}}</li>
                <li>{{t "Support independent publishing"}}</li>
                <li>{{t "Simple, secure card payment"}}</li>
                <li>{{t "Easy payment instead of 12"}}</li>
                <li>{{t "Get discount!"}}</li>
            </ul>
            <a class="checkout" href="javascript:void(0)" data-members-plan="Yearly">{{t "Choose this plan"}}</a>
        </div>
    </div>
</div>