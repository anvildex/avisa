<header class="header-area">
    <div class="container header-wrap">
        <div class="header-left">
            {{!-- Site title/logo --}}
            <div class="brand">
                {{#if @site.logo}}
                <a class="brand-logo" href="{{@site.url}}"><img src="{{@site.logo}}" alt="{{@site.title}}"></a>
                {{else}}
                <a class="brand-title" href="{{@site.url}}">{{@site.title}}</a>
                {{/if}}
            </div>
            <div class="menu-area">
                {{!-- Mobile menu toggle button --}}
                <div class="menu-toggle">
                    <span class="line"></span>
                    <span class="line"></span>
                    <span class="line"></span>
                </div>
                <div class="menu-wrap">
                    {{!-- Insert main navigation | partials/navigation.hbs --}}
                    {{navigation}}

                    {{!-- Member navigation --}}
                    {{#if @labs.members}}
                    <ul class="members-nav">
                        {{#if @member}}
                        <li class="members-item"><a class="members-link account" href="{{@site.url}}/account">{{t "Account"}}</a></li>
                        <li class="members-item"><a class="members-link signout" href="javascript:void(0)" data-members-signout>{{t "Sign out"}}</a></li>
                        {{else}}
                        <li class="members-item"><a class="members-link signin signin-open" href="javascript:void(0)">{{t "Sign in"}}</a></li>
                        <li class="members-item"><a class="members-link subscribe" href="{{@site.url}}/subscribe">{{t "Subscribe"}}</a></li>
                        {{/if}}
                    </ul>
                    {{/if}}
                </div>
            </div>
        </div>
        <div class="header-right">
            {{!-- Open search popup --}}
            <div class="search-open">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path></svg>
            </div>
        </div>
    </div>
</header>